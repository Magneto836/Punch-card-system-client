<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hello"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="你好，用户"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/btn_personal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_launcher_student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOn"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="#abcdef"
        android:text="上班签到"
        android:textColor="#FFFFFF"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOut"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="#abcdef"
        android:text="下班签到"
        android:textColor="#FFFFFF"

        toolbar:layout_constraintEnd_toEndOf="parent"
        toolbar:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selfRecord"
        android:layout_width="152dp"
        android:layout_height="107dp"
        android:text="查看考勤记录"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="508dp"
        android:backgroundTint="#6CBEC7"
        android:layout_marginEnd="136dp" />


</androidx.constraintlayout.widget.ConstraintLayout>